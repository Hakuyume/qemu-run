[Unit]
Description=QEMU virtual machine %i
After=network.target

[Service]
Type=simple
Group=wheel
UMask=002
ExecStartPre=/usr/bin/rm -rf /tmp/qemu/%i
ExecStartPre=/usr/bin/install -d /tmp/qemu/%i
ExecStart=/usr/bin/qemu-run /etc/qemu/%i.yaml
ExecStop=/usr/bin/socat system:'echo system_powerdown' /tmp/qemu/%i/monitor.sock
TimeoutStopSec=60
KillMode=none

[Install]
WantedBy=multi-user.target
